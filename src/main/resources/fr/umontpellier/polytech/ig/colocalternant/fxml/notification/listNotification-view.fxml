<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="fr.umontpellier.polytech.ig.colocalternant.controller.accommodationAlert.listNotificationController"
      prefHeight="400.0" prefWidth="600.0">

    <fx:include source="../header.fxml"/>

    <VBox spacing="30" alignment="TOP_CENTER" VBox.vgrow="ALWAYS">
        <VBox.margin>
            <Insets top="30" bottom="30"/>
        </VBox.margin>
        <Label textFill="orange" style="-fx-font-size: 20;" text="List of all notifications"/>
        <Separator prefHeight="2" style="-fx-background-color: black;"/>

        <HBox spacing="50" alignment="CENTER">
            <Button fx:id="backButton"
                    style=
                            "-fx-padding: 10;
                            -fx-min-width: 80;
                            -fx-background-color: orange;
                            -fx-text-fill: white;
                            -fx-font-weight: bold;"
                    mnemonicParsing="false"
                    onAction="#handleBackButtonClick"
                    text="Back to your profile"/>

            <Button fx:id="alertButton"
                    style=
                            "-fx-padding: 10;
                            -fx-min-width: 80;
                            -fx-background-color: grey;
                            -fx-text-fill: white;
                            -fx-font-weight: bold;"
                    mnemonicParsing="false"
                    onAction="#handleListAccommodationAlterButtonClick"
                    text="See your alert"/>
        </HBox>

    </VBox>

    <fx:include source="../footer.fxml"/>

</VBox>
