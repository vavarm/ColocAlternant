<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import org.kordamp.bootstrapfx.scene.layout.Panel?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.text.Text?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="fr.umontpellier.polytech.ig.colocalternant.LoginController"
      style="-fx-background-color: #f5f5f5;">

    <!-- StackPane at the top -->
    <StackPane style="-fx-background-color: #FFFCE5;">
        <ImageView fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true">
            <Image fx:id="primaryLogo" url="@../images/PrimaryLogo.png"/>
        </ImageView>
    </StackPane>

    <HBox spacing="30" VBox.vgrow="ALWAYS" alignment="CENTER">
        <VBox spacing="30" alignment="CENTER">

            <Label text="Login"/>
            <Label text="Pseudo"/>
            <TextField fx:id="pseudo"/>
            <Label text="Password"/>
            <PasswordField fx:id="password"/>
            <Button fx:id="loginButton" mnemonicParsing="false" onAction="#login" text="Login"/>
            <Label fx:id="errorLabel" text="Error" textFill="RED" visible="false"/>

        </VBox>
    </HBox>
    <StackPane style="-fx-background-color: #FFFCE5;">
        <Text style="-fx-fill: #7b7b7b; -fx-background-color: #FFFCE5;"
              text="Credits: Suzanne R., Valentin R--M., Christradja B., Nicolas Ge."
              textAlignment="JUSTIFY"/>
    </StackPane>

</VBox>
