<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns:fx="http://javafx.com/fxml"
      xmlns="http://javafx.com/javafx"
      fx:controller="fr.umontpellier.polytech.ig.colocalternant.LoginController"
      style="-fx-background-color: #f5f5f5;">

    <fx:include source="header.fxml"/>

    <HBox spacing="30" VBox.vgrow="ALWAYS" alignment="CENTER">
        <VBox spacing="30" alignment="CENTER">

            <Label text="Login"/>
            <Label text="Email"/>
            <TextField fx:id="email"/>
            <Label text="Password"/>
            <PasswordField fx:id="password"/>
            <Button fx:id="loginButton" mnemonicParsing="false" onAction="#login" text="Login"/>
            <Label fx:id="errorLabel" text="Error" textFill="RED" visible="false"/>

        </VBox>
    </HBox>

    <fx:include source="footer.fxml"/>

</VBox>
