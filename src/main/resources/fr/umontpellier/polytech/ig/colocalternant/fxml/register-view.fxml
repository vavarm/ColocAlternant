<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      xmlns="http://javafx.com/javafx"
      fx:controller="fr.umontpellier.polytech.ig.colocalternant.controller.RegisterController"
      style="-fx-background-color: #f5f5f5;">

    <fx:include source="header.fxml"/>

    <HBox spacing="10" VBox.vgrow="ALWAYS" alignment="CENTER">
        <VBox spacing="10" alignment="CENTER">

            <Label text="Register"/>
            <Label text="First Name"/>
            <TextField fx:id="firstName"/>
            <Label text="Last Name"/>
            <TextField fx:id="lastName"/>
            <Label text="Age"/>
            <TextField fx:id="age"/>
            <Label text="Email"/>
            <TextField fx:id="email"/>
            <Label text="Password"/>
            <PasswordField fx:id="password"/>
            <Label text="Photo"/>
            <TextField fx:id="photo"/>
            <Button mnemonicParsing="false" onAction="#register" text="Register"/>
            <Label fx:id="errorLabel" text="Error" textFill="RED" visible="false"/>


        </VBox>
    </HBox>

    <fx:include source="footer.fxml"/>

</VBox>