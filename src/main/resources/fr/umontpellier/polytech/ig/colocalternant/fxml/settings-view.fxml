<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="fr.umontpellier.polytech.ig.colocalternant.controller.SettingsController"
      style="-fx-background-color: #f5f5f5;">

    <fx:include source="header.fxml"/>

    <HBox spacing="10" VBox.vgrow="ALWAYS" alignment="CENTER">
        <VBox spacing="10" alignment="CENTER">

            <Label text="Settings"/>
            <Label text="Change Password"/>
            <PasswordField fx:id="newPwd"/>
            <Button text="Change Password" onAction="#passwordChange"/>

            <Label fx:id="errorLabel" text="Error" textFill="RED" visible="false"/>

        </VBox>
    </HBox>

    <fx:include source="footer.fxml"/>

</VBox>
